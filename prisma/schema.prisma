generator client {
  provider		= "prisma-client-js"
}

datasource db {
  provider		= "postgresql"
  url					= env("DATABASE_URL")
}

model Token {
	id					String @id @default(cuid())
	value				String @unique
	expiration	DateTime
	user				User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId			String
}

model User {
	id					String @id @default(cuid())
	email				String @unique
	loginCode		String?
	secret			String?
	tokens			Token[]
}
