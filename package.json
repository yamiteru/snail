{
  "name": "snail",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
		"format": "prettier --write \"**/*.{ts,tsx}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx}\"",
		"lint": "turbo lint",
		"lint:check": "turbo lint:check"
	},
  "devDependencies": {
		"@types/node": "18.11.18",
		"typescript": "4.9.4",
		"prettier": "2.8.1",
    "turbo": "1.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@7.19.0"
}
